# Pinecone Configuration (Required)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=ailsa-grants

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Configuration
POSTGRES_PASSWORD=dev_password
DATABASE_URL=postgresql://postgres:dev_password@localhost:5432/ailsa

# Scraper Configuration
SCRAPER_SCHEDULE=0 */6 * * *  # Cron expression: Every 6 hours
RUN_ON_STARTUP=true            # Run scraper immediately on container startup
ONLY_OPEN_GRANTS=true          # true = only scrape open grants, false = all statuses
SCRAPER_MODE=incremental       # incremental or full
